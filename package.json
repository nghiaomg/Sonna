{
  "name": "sonna",
  "productName": "Sonna",
  "private": true,
  "version": "1.0.1",
  "description": "Modern Local Development Environment for Windows",
  "author": "nghiaomg",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite & cross-env NODE_ENV=development electron .",
    "build": "tsc -p electron && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "start": "electron-vite preview",
    "create-icons": "node scripts/create-windows-ico.js",
    "copy-assets": "node scripts/copy-assets.js",
    "fix-icons": "node scripts/apply-rcedit.js",
    "build:win": "build-windows.bat",
    "dist:win": "electron-builder --win --config electron-builder.json",
    "build:electron": "tsc -p electron"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "adm-zip": "^0.5.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.460.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.34.2",
    "tailwind-merge": "^2.2.1",
    "to-ico": "^1.1.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^20.11.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.4.35",
    "rcedit": "^4.0.1",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.nghiaomg.sonna",
    "productName": "Sonna",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
